<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-sm">
        <div class="card-body text-center">

          <h4 class="card-title mb-4">Edit Profile</h4>

          <!-- Avatar Preview -->
          <div class="mb-3">
            <% if @profile.avatar.attached? %>
              <%= image_tag @profile.avatar.variant(resize_to_fill: [120, 120]), class: "rounded-circle mb-2", style: "object-fit: cover;" %>
            <% else %>
              <%= image_tag "default_user_image.jpg", class: "rounded-circle mb-3", style: "width: 120px; height: 120px; object-fit: cover;" %>
            <% end %>
          </div>

          <%= form_with(model: @profile, html: { multipart: true }) do |f| %>

            <div class="mb-3 text-start">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Your Name" %>
            </div>

            <div class="mb-3 text-start">
              <%= f.label :bio, class: "form-label" %>
              <%= f.text_area :bio, class: "form-control", placeholder: "Tell us about yourself...", rows: 3 %>
            </div>

            <div class="mb-3 text-start">
              <%= f.label :avatar, "Profile Picture", class: "form-label" %>
              <%= f.file_field :avatar, class: "form-control" %>
              <% if @profile.avatar.attached? %>
                <small class="text-muted">Current image shown above</small>
              <% end %>
            </div>

            <div class="d-flex justify-content-center gap-2">
              <%= f.submit "Save Changes", class: "btn btn-success" %>
              <%= link_to "Cancel", profile_path(@profile), class: "btn btn-outline-secondary" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>
