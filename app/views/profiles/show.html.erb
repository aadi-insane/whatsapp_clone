<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <!-- Profile Card -->
      <div class="card shadow-sm">
        <div class="card-body text-center">

          <!-- Avatar -->
          <% if @profile.avatar.attached? %>
            <%= image_tag @profile.avatar.variant(resize_to_fill: [120, 120]), class: "rounded-circle mb-3", style: "object-fit: cover;" %>
          <% else %>
              <%= image_tag "default_user_image.jpg", class: "rounded-circle mb-2", style: "width: 120px; height: 120px; object-fit: cover;" %>
          <% end %>

          <!-- Name -->
          <h4 class="card-title mb-1"><%= @profile.name.presence || @profile.user.email %></h4>

          <!-- Bio -->
          <p class="text-muted mb-3"><%= @profile.bio.presence || "No bio added" %></p>

          <!-- Action Buttons -->
          <div class="d-flex justify-content-center gap-3 mb-3">
            <% if @profile.user == current_user %>
              <%= link_to "Edit Profile", edit_profile_path(@profile), class: "btn btn-outline-primary btn-sm" %>
            <% else %>
              <%= link_to "Message", chats_path, class: "btn btn-success btn-sm" %>
            <% end %>
          </div>

          <!-- Additional Info -->
          <ul class="list-group list-group-flush text-start">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>Email</span>
              <span class="text-muted"><%= @profile.user.email %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>Member Since</span>
              <span class="text-muted"><%= @profile.created_at.strftime("%B %Y") %></span>
            </li>
          </ul>

        </div>
      </div>

    </div>
  </div>
</div>
